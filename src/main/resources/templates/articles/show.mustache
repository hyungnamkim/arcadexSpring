{{#article}}

    <table class="table">
        <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">name</th>
            <th scope="col">description</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">{{id}}</th>
            <td>{{name}}</td>
            <td>{{description}}</td>
        </tr>

        </tbody>
    </table>
    <a href="/articles/{{id}}/edit" class="btn btn-primary">Edit</a>
    <a href="/articles/{{id}}/delete" class="btn btn-danger">Delete</a>
    <a href="/articles" class="btn btn-primary">Go to Article List</a>
{{/article}}